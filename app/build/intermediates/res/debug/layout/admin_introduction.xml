<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/building" 
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ivIntroLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/notes" />

    <TextView
        android:id="@+id/tvOrganisationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off Line Setup"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvEditSeverityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Menu Items"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
      <Spinner
          android:id="@+id/spEditSeverity"
          android:layout_width="149dp"
          android:layout_height="wrap_content" />
 
    <Spinner
        android:id="@+id/spEditEstimate"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />
    
    <Button
        android:id="@+id/bAdminIntroEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter" />

